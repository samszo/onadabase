  <mx:HTTPService id="srvEtatDiag" url="http://localhost/onadabase/library/php/ExeAjax.php"
  	result="rhEtatDiag(event);" showBusyCursor="true" />
  <mx:HTTPService id="srvEtatDiagListe" url="http://localhost/onadabase/library/php/ExeAjax.php"
  	result="rhEtatDiagListe(event);" showBusyCursor="true" />
  	
	<mx:Script source="onadaflex.as"/>


 	<!-- Define custom colors for use as fills. -->
    <mx:SolidColor id="sc0" color="green" alpha=".8"/>
    <mx:SolidColor id="sc1" color="yellow" alpha=".8"/>
    <mx:SolidColor id="sc2" color="#ffa200" alpha=".6"/>
    <mx:SolidColor id="sc3" color="red" alpha=".6"/>

    <!-- Define custom Strokes for the columns. -->
    <mx:Stroke id="s0" color="green" weight="2"/>
    <mx:Stroke id="s1" color="yellow" weight="2"/>
    <mx:Stroke id="s2" color="#ffa200" weight="2"/>
    <mx:Stroke id="s3" color="red" weight="2"/>
 
  
 <mx:Panel title="ONADABASE diagnostics pour l'accessibilité" width="100%" height="100%">
 <mx:Panel title="Choisissez les éléments à afficher" >
  <mx:HBox>
      <mx:CheckBox selected="false" change="createMarkerGrille('66')"/>
      <mx:Label text="Territoire" color="{categories['grille_66'].color}"/>
      <mx:CheckBox selected="false" change="createMarkerGrille('55')"/>
      <mx:Label text="Etablissement" color="{categories['grille_55'].color}"/>
      <mx:CheckBox selected="false" change="createMarkerGrille('62')"/>
      <mx:Label text="Voirie" color="{categories['grille_62'].color}"/>
      <mx:CheckBox selected="false" change="createMarkerGrille('53')"/>
      <mx:Label text="Bâtiment" color="{categories['grille_53'].color}"/>
      <mx:CheckBox selected="false" change="createMarkerGrille('61')"/>
      <mx:Label text="Espace extérieur" color="{categories['grille_61'].color}"/>
      <mx:CheckBox selected="false" change="createMarkerGrille('58')"/>
      <mx:Label text="Parcelle" color="{categories['grille_58'].color}"/>
      <mx:CheckBox selected="false" change="createMarkerGrille('35')"/>
      <mx:Label text="Niveau" color="{categories['grille_35'].color}"/>
      <mx:CheckBox selected="false" change="createMarkerGrille('57')"/>
      <mx:Label text="Espace intérieur" color="{categories['grille_57'].color}"/>
      <mx:CheckBox selected="false" change="createMarkerGrille('63')"/>
      <mx:Label text="Objet intérieur" color="{categories['grille_63'].color}"/>
      <mx:CheckBox selected="false" change="createMarkerGrille('64')"/>
      <mx:Label text="Objet extérieur" color="{categories['grille_64'].color}"/>
      <mx:CheckBox selected="false" change="createMarkerGrille('72')"/>
      <mx:Label text="Ligne de transport" color="{categories['grille_72'].color}"/>


  </mx:HBox>	
</mx:Panel>
  <mx:HDividedBox width="100%" height="100%">
   <mx:VBox id="chartBox" visible="false" width="0" height="100%" paddingLeft="5" paddingTop="5" >
    <mx:Label id="chartTitre" text="" fontSize="24" fontWeight="bold"/>
    <!-- clefs du graphique -->
    <mx:Label id="idRub" text="" fontSize="24" fontWeight="bold"/>
    <mx:Label id="idSite" text="" fontSize="24" fontWeight="bold"/>
    <!-- traces du graphique -->
	<mx:TextArea id="chartTrace" height="100" width="100%" />
    <mx:ColumnChart id="chart" 
        dataProvider="{rsEtatDiag.EtatDiag.Obstacles}" 
        type="stacked"
        showDataTips="true" 
        width="100%" 
        height="100%"
		change="chartEtatDiagChange(event)"
		selectionMode="multiple"
    >
        <mx:horizontalAxis>
            <mx:CategoryAxis id="h1" categoryField="id" />
        </mx:horizontalAxis>
        <mx:series>
           <mx:ColumnSeries 
                xField="id" 
                yField="niv0" 
                displayName="Critères valides"
				fill="{sc0}"
                stroke="{s0}"
                selectable="true"
           />
           <mx:ColumnSeries 
                xField="id" 
                yField="niv1" 
                displayName="Obstacles niveau 1"
				fill="{sc1}"
                stroke="{s1}"
           />
           <mx:ColumnSeries 
                xField="id" 
                yField="niv2" 
                displayName="Obstacles niveau 2"
				fill="{sc2}"
                stroke="{s2}"
           />
           <mx:ColumnSeries 
                xField="id" 
                yField="niv3" 
                displayName="Obstacles niveau 3"
				fill="{sc3}"
                stroke="{s3}"
           />
        </mx:series>
    </mx:ColumnChart>
    <mx:HBox paddingLeft="40" width="100%" >
		<mx:Image id="imgAlphaMoteur" source="{AIcon}" width="80" />
		<mx:Image id="imgAlphaAudio" source="{BIcon}" width="80" />
		<mx:Image id="imgAlphaCog" source="{CIcon}" width="80" />
		<mx:Image id="imgAlphaVisu" source="{DIcon}" width="80" />		
	</mx:HBox>
     <mx:Legend>
	    <mx:HBox>
			<mx:VBox >
				<mx:Label text="Critères valides" fontWeight="bold" />
		        <mx:LegendItem label="" fontWeight="bold" fill="{sc0}" stroke="{s0}" />			
			</mx:VBox>
			<mx:VBox >
				<mx:Label text="Obstacles" fontWeight="bold" />
			    <mx:HBox>
			        <mx:LegendItem label="Niveau 1" fontWeight="bold" fill="{sc1}" stroke="{s1}" />
			        <mx:LegendItem label="Niveau 2" fontWeight="bold" fill="{sc2}" stroke="{s2}" />
			        <mx:LegendItem label="Niveau 3" fontWeight="bold" fill="{sc3}" stroke="{s3}" />
				</mx:HBox>
			</mx:VBox>
		</mx:HBox>
     </mx:Legend>


   </mx:VBox>
   <mx:UIComponent id="mapHolder"
      initialize="onHolderCreated(event);"
      resize="onHolderResized(event)"
      width="70%" height="100%"/>
  </mx:HDividedBox>
 </mx:Panel>

</mx:Application>